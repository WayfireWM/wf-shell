<?xml version="1.0"?>
<wf-shell>
	<plugin name="locker">
	<_short>Locker</_short>
	<category>Shell</category>
	<group>
	<_short>General</_short>
	<option name="background_color" type="string">
		<_short>Background Color</_short>
		<default>gtk_headerbar</default>
	</option>
	<option name="hide_time" type="int">
		<_short>Hide contents when inactive</_short>
		<_long>When no user input is detected, hide the unlock controls. 0 means never. Time is in milliseconds</_long>
		<default>5000</default>
		<min>0</min>
	</option>
	<option name="hide_anim" type="int">
		<_short>Hide contents animation</_short>
		<default>1</default>
		<desc>
			<value>0</value>
			<_name>None</_name>
		</desc>
		<desc>
			<value>1</value>
			<_name>Fade</_name>
		</desc>
		<desc>
			<value>2</value>
			<_name>Slide Down</_name>
		</desc>
		<desc>
			<value>3</value>
			<_name>Slide Left</_name>
		</desc>
		<desc>
			<value>4</value>
			<_name>Slide Right</_name>
		</desc>
		<desc>
			<value>5</value>
			<_name>Slide Up</_name>
		</desc>
		<desc>
			<value>6</value>
			<_name>Swing Down</_name>
		</desc>
		<desc>
			<value>7</value>
			<_name>Swing Left</_name>
		</desc>
		<desc>
			<value>8</value>
			<_name>Swing Right</_name>
		</desc>
		<desc>
			<value>9</value>
			<_name>Swing Up</_name>
		</desc>
	</option>
	<option name="hide_anim_dur" type="int">
		<_short>Hide contents duration</_short>
		<_long>Number of milliseconds to animate hide/show of inactive windows</_long>
		<default>400</default>
		<min>0</min>
	</option>
	<option name="prewake" type="int">
		<_short>Early instant unlock</_short>
		<_long>If the user moves mouse or presses a key within this many milliseconds of lock, instantly unlock</_long>
		<default>1000</default>
		<min>0</min>
	</option>
	<option name="lockout_attempts" type="int">
		<_short>Lock after failed attempts</_short>
		<default>5</default>
		<min>1</min>
	</option>
	<option name="lockout_timer" type="int">
		<_short>Lockout time</_short>
		<default>10</default>
		<min>10</min>
	</option>
	</group>
